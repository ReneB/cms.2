<%= form_for @account, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :display_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :display_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :login_code, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :login_code, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :group, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :group, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  accounts_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
